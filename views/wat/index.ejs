<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ลงทะเบียน</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- datatables -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />


</head>

<body>
    <%- include('../navbar'); %>
        <div class="container">

            <% if(messages.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= messages.error %>
                </div>
                <% } %>
                    <% if(messages.success) { %>
                        <div class="alert alert-success" role="alert">
                            <%= messages.success %>
                        </div>
                        <% } %>
                            
                            <div class="card">
                                <div class="card-header">
                                    <ul class="nav nav-pills">
                                        <li class="nav-link">ระบบลงทะเบียนพระ</li>
                                        <li class="nav-link ml-auto">
                                            <a href="/wat/add" class="nav-link active">ลงทะเบียน</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="card-body">
                                    <% if(data.length) { %>
                                        <table id="example" class="display" style="width: 100%">
                                            <thead>
                                                <tr>
                                                    <th scope="col">#</th>
                                                    <th scope="col">ชื่อ</th>
                                                    <th scope="col">ฉายา</th>
                                                    <th scope="col">พรรษา</th>
                                                    <th scope="col">จำพรรษาอยู่วัด</th>
                                                    <th scope="col">เลขที่-หมู่</th>
                                                    <th scope="col">ตำบล</th>
                                                    <th scope="col">อำเภอ</th>
                                                    <th scope="col">จังหวัด</th>
                                                    <th scope="col">เบอร์โทรศัพท์</th>
                                                    <th width="200px">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(let i=0; i<data.length; i++) { %>
                                                    <tr>
                                                        <th scope="row">
                                                            <%=(i+1) %>
                                                        </th>
                                                        <td>
                                                            <%= data[i].name %>
                                                        </td>
                                                        <td>
                                                            <%= data[i].cname %>
                                                        </td>
                                                        <td>
                                                            <%= data[i].age %>
                                                        </td>
                                                        <td>
                                                            <%= data[i].address %>
                                                        </td>
                                                        <td>
                                                            <%= data[i].address2 %>
                                                        </td>
                                                        <td>
                                                            <%= data[i].address3 %>
                                                        </td>
                                                        <td>
                                                            <%= data[i].address4 %>
                                                        </td>
                                                        <td>
                                                            <%= data[i].address5 %>
                                                        </td>
                                                        <td>
                                                            <%= data[i].tel %>
                                                        </td>

                                                        <td>
                                                            <a href="../wat/edit/<%= data[i].id %>"
                                                                class="btn btn-success edit">Edit</a>
                                                            <a href="../wat/delete/<%= data[i].id %>"
                                                                onclick="return alert('คุณแน่ใจนะ')"
                                                                class="btn btn-danger delete">Delete</a>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                            </tbody>
                                        </table>
                                        <% } %>
                                            <% if(!data.length) { %>
                                                <p class="text-center">ไม่พบข้อมูล</p>
                                                <% } %>
                                </div>
                            </div>

                            <script>
                                $(document).ready(function () {
                                    $("#example").DataTable();
                                });
                            </script>
        </div>
</body>

</html>